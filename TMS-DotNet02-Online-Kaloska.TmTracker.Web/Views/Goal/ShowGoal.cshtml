@section css
{
    <link rel="stylesheet" href="~/css/tracker.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,400;0,700;1,400;1,700&display = swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/todolist/todo.css" />
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/css/sidebarson.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        #goal {
            color: #fff;
            background-color: #1b6ec2;
            border-color: #1861ac;
        }
    </style>
}
<div style="display: flex; flex-direction:column; flex-wrap: wrap; ">
    <div style="margin-bottom:10px">
        <h4>Проект: @ViewBag.nameProject.ToString()</h4>
    </div>

    <div style=" display: flex; justify-content: center; flex-direction: column; /* align-self: center; */ margin: auto;">
        <h3>Список задач:</h3>
        <div class="style-todo" style="max-width: 450px; ">
            <form id="formtodo" class="form-todolist" onsubmit="return post()">
                <input type="text" name="text" required style="width: 450px; " class="todo-input"><input style="display:none;" name="projectId" value="@ViewBag.projectId" />
                <button class="todo-button formbutton-list" type="submit">
                    <i class="fas fa-plus-square"></i>
                </button>
            </form>
            <div class="todo-container">
                <ul class="todo-list">
                    @foreach (var goal in ViewBag.goals)
                    {


                        <div class="todo">
                            @if (goal.IsComplete)
                            {
                            <li class="todo-item completed">@goal.Text</li>
                        }
                        else
                        {
                            <li class="todo-item">@goal.Text</li>
                        }
                            <button class="complete-btn" id="@goal.Id"><i class="fas fa-check"></i></button>
                            <button class="trash-btn" id="@goal.Id"><i class="fas fa-trash"></i></button>
                    </div>
                }
                    </ul>
                </div>
            </div>
        </div>
        </div>

        <script src="/lib/jquery/dist/jquery.min.js"></script>
        @section Scripts
        {
            <script src="~/js/sidebars.js"></script>
            <script src="~/todolist/todo.js" asp-append-version="true"></script>
            <script src="~/js/timer.js" asp-append-version="true"></script>
        }