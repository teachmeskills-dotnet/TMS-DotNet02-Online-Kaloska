@section css
{
    <link rel="stylesheet" href="~/css/tracker.css" />
    <link href="https://fonts.googleapis.com/css2?family=Poppins:ital,wght@0,100;0,400;0,700;1,400;1,700&display = swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/todolist/todo.css" />
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/css/sidebarson.css" />
    <link rel="stylesheet" type="text/css" asp-append-version="true" href="~/css/recordstyle.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha512-Fo3rlrZj/k7ujTnHg4CGR2D7kSs0v4LLanw2qksYuRlEzO+tcaEPQogQ0KaoGN26/zrn20ImR1DfuLWnOo7aBA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <style>
        #record {
            color: #fff;
            background-color: #1b6ec2;
            border-color: #1861ac;
        }
    </style>
}
<div style="display: flex; flex-direction:column; flex-wrap: wrap; ">
    <div>
        <h4>Проект: @ViewBag.nameProject</h4>
    </div>
    <div style=" display: flex; justify-content: space-evenly; flex-wrap: wrap-reverse;">
        <ul class="rounded">
            @foreach (var record in ViewBag.records)
            {
                <li>
                    <a><span>Пользователь: @record.NameUser  </span><span>Дата: @record.DateCreate  </span><span>Количество времени: @record.Timer </span><br /><span>Задача: @record.GoalName</span></a>
                </li>
            }
        </ul>
        <div>
            <div class="timer" style=" text-align: center;" id="app">
                <div class="base-timer" style=" text-align: center;" onclick="buttomTimer()">
                    <svg class="base-timer__svg" viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
                        <g class="base-timer__circle">
                            <circle id="elapsed" class="base-timer__path-elapsed" cx="50" cy="50" r="45"></circle>
                        </g>
                    </svg>
                    <span id="base-timer-label" class="base-timer__label"></span>
                </div>
                <input id="buttomTimer" type="submit" route-id="Timer()" value="Завершить" onclick="Timer(@ViewBag.projectId)">
            </div>
            <div style="max-height:100px">
                @Html.DropDownList("goalselect", ViewBag.goals as SelectList, "Список задач", new { @class = "form-control mt-3 mb-3" })
            </div>
        </div>
    </div>
</div>

<script src="/lib/jquery/dist/jquery.min.js"></script>
@section Scripts
{
    <script src="~/js/sidebars.js"></script>
    <script src="~/todolist/todo.js" asp-append-version="true"></script>
    <script src="~/js/timer.js" asp-append-version="true"></script>
}
